{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "bitcoinrewards",
  "version": "3.1.3",
  "description": "bitcoinrewards.com browser extension",
  "homepage_url": "https://www.bitcoinrewards.com/",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "webRequest",
    "storage",
