  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://*.twitter.com/*"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
