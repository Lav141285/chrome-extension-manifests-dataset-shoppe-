      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ],
      "css": [
        "assets/css/contentScript.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/injected.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
