      "512": "icons/512.png",
      "64": "icons/64.png"
   },
   "manifest_version": 3,
   "name": "__MSG_app_name__",
   "options_ui": {
      "open_in_tab": true,
      "page": "ui/options/index.html"
   },
   "permissions": [
      "activeTab",
      "storage",
      "contextMenus"
   ],
   "version": "3.0.0",
