  "background": {
    "scripts": ["scripts/softblock.js"]
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
   "128": "images/icon128.png"
  },
  "options_page": "html/options.html",
  "browser_action": {
    "default_title": "SoftBlock",
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    }
  }
