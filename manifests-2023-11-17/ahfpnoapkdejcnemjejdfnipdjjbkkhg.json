{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "__MSG_app_title__",
  "description": "__MSG_app_description__",
  "short_name": "__MSG_app_title_short__",
  "default_locale": "en",
  "version": "2.3",
  "background": {
    "service_worker": "app/background/background.js",
    "type": "module"
