---
slug: leetrecord
name: LeetRecord
publisher: Jintin
rating: 3.5
rating_count: 2
user_count: 243
---

{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "LeetRecord",
  "version": "1.10.0",
  "manifest_version": 2,

  "description": "LeetRecord is a portable/backup tool for your leetcode records",
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "background": {
    "scripts": ["lib/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "run_at": "document_start",
    "matches": ["https://leetcode.com/problems/*"],
    "js": [
      "lib/problem.js"
    ]
  }],
  "page_action": {
    "default_popup": "lib/popup.html",
    "icons": {
      "16": "icon/icon-16.png",
      "32": "icon/icon-32.png",
      "48": "icon/icon-48.png",
      "128": "icon/icon-128.png"
    }
  },
  "permissions": [
    "declarativeContent",
    "storage",
    "https://*.github.com/*"
  ]
}
