{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "CheckStore offre une solution gratuite pour prot√©ger les consommateurs dans l'e-commerce.",
  "version": "0.1.2",
  "default_locale": "fr",
  "content_security_policy":  "script-src 'self' https://app.checkstore.fr; object-src 'self'",
  
  "browser_action": {
    "default_icon": "icons/48x48.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
        "matches": ["https://www.google.com/search*"],
        "css": ["content_script.css"],
        "js": ["js/content_script_google.js"]
      },
      {
        "matches": ["<all_urls>"],
        "css": ["content_script_lock.css"],
        "js": ["js/content_script_lock.js"]
      }
  ],

  "background": {
    "scripts": [ "js/background.js"],
    "persistent": false
  },

  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },

  "permissions": [
    "<all_urls>",
    "storage",
    "tabs",
    "webNavigation"
  ],

  "web_accessible_resources": [
    "checkstore-modal.html", 
    "icons/checkstore-background.svg", 
    "icons/checkstore-color.svg",
    "fonts/Montserrat/Montserrat-Regular.woff"
  ]
