{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "BraveExtreme Extension",
  "description": "Get notifications for live extreme sports broadcast of your favorite category",
  "version": "1.1",
  "background": {
    "scripts": ["js/background.js"]
  },
  "icons": { 
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png" 
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "notifications",
    "gcm",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'"
}
