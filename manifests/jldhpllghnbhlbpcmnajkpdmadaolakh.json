{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "version": "10.2",
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "short_name": "Todoist",
    "default_locale": "en",

    "icons": {
        "16": "todoist_16.png",
        "48": "todoist_48.png",
        "128": "todoist_128.png",
        "256": "todoist_256.png",
        "512": "todoist_512.png"
