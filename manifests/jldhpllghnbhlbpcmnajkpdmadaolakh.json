        "js": ["counter_update.js"],
        "all_frames": true
    }],

    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },

    "permissions": [
        "storage",
        "tabs",
        "background",
        "contextMenus",
        "notifications",
        "http://*.todoist.com/*",
        "https://*.todoist.com/*"
    ],

    "commands": {
        "add-to-todoist": {
            "suggested_key": {
                "default": "Alt+Shift+A"
            },
            "description": "__MSG_addToTodoist__"
        }
    }
