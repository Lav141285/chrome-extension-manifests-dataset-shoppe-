{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "Assembla Mentions",
  "description": "This extension will allow you to be aware of your Assembla mentions when navigating in other tabs.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "alarms",
    "https://www.assembla.com/"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon19.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  }
}
