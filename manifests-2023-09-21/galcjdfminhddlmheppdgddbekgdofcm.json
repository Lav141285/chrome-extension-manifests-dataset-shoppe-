  "author": "The Master",
  "name": "Thumbnail Viewer for YouTube™",
  "description": "A simple extension that grabs the thumbnail from the current youtube video and displays it.",
  "manifest_version": 2,
  "version": "1.3.5",

  "icons": {
    "16": "thumbnail-16.png",
    "48": "thumbnail-48.png",
    "128": "thumbnail-128.png"
  },

  "permissions": [
    "activeTab", "*://*.youtube.com/*"
  ],

  "browser_action": {
    "default_icon": "thumbnail-48.png",
    "default_title": "Click to view current video thumbnail",
    "default_popup": "popup.html"
    },

 "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": ["jquery.js", "popup.js", "popup.css", "thumbnail-16.png", "thumbnail-48.png", "thumbnail-128.png"]
