{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Simple Site Blocker",
  "version": "1.0",
  "description": "Empower your time by easily blocking distracting sites temporarily",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "webRequestBlocking",
    "webRequest",
    "<all_urls>",
    "alarms",
    "tabs"
  ],
  "background": {
    "scripts": ["chrome/storage.js", "chrome/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/icon128.png"
  }
}
