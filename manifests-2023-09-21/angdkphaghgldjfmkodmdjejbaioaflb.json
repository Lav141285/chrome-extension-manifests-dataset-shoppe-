      "run_at": "document_end"
    },
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["linkedin/linkedin.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://app.hubspot.com/*"],
      "js": ["hubspot/hubspot.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://frnd.ai/*", "https://beta.frnd.ai/*"],
      "js": ["frnd-ai/frnd-ai.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["global/global.js"],
      "runt_at": "document_end",
