, 	"version"				: "2.1.0.0"

,	"manifest_version"		: 2
,	"homepage_url"			: "https://openaddons.com/"
,	"description"			: "__MSG_description__"

,	"icons"					:
		{  "16"				: "icon.png"
		,  "48"				: "icon-48.png"
		, "128"				: "icon-128.png"
		}

,	"permissions"			:
		[  "contextMenus"
         , "activeTab"
         ,"browsingData"
		]
,	"offline_enabled"		: true
,	"browser_action"		:
		{ "default_icon"	: "icon.png"
		, "default_title" : "__MSG_icon_hover_text__"
		}

,	"incognito"				: "spanning"
,	"background"			: 
		{ "scripts": ["background.js"]
