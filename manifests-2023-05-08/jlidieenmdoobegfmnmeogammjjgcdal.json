        "default_title": "Golden Ratio"
    },
    "commands": {
        "_execute_browser_action" : {
            "suggested_key": {
                "default": "Ctrl+Shift+X",
                "windows": "Ctrl+Shift+X",
                "mac": "Command+Shift+X",
                "chromeos": "Ctrl+Shift+X",
