{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "BetterTheatre",
  "description": "With this extension you can enjoy a full size theatre mode on youtube.",
  "version": "1.5.0",
  "author": "Paolo Basso",

  "content_scripts": [
    {
      "matches": [ "*://www.youtube.com/*" ],
      "css": [ "css/BetterTheatre.css" ]
    }
  ],

  "icons": {
    "16": "assets/BT_icon16.png",
    "48": "assets/BT_icon48.png",
    "128": "assets/BT_icon128.png"
  },

  "browser_action": {
    "default_title": "BetterTheatre",
    "default_icon": {
      "19": "assets/BT_icon19.png",
      "38": "assets/BT_icon38.png"
    }
  },

  "web_accessible_resources": [
    "css/BetterTheatre.css"
  ],

  "permissions": [
    "*://www.youtube.com/*"
  ]
}
